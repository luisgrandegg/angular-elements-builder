{
  "name": "angular-elements-builder",
  "version": "0.1.0",
  "description": "Generator for Angular Elements custom elements manifest and typings",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "ng-elements-gen": "lib/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint",
    "lint:all": "eslint \"tools/**/*.ts\"",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "**/*.ts": "npm run lint -- --fix"
  },
  "dependencies": {
    "ts-morph": "^20.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@angular/core": "^21.1.2",
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.7",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  }
}
