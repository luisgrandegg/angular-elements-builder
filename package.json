{
  "name": "angular-elements-builder",
  "version": "0.1.0",
  "description": "RegisterWebComponent decorator and Angular builder to export components as Angular Elements (build and output fully delegated to Angular)",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "browser": "./lib/lib/decorators.js",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json",
    "./builders.json": "./builders.json"
  },
  "bin": {
    "ng-elements-gen": "lib/cli.js"
  },
  "builders": "builders.json",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint",
    "lint:all": "eslint \"tools/**/*.ts\"",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "**/*.ts": "npm run lint -- --fix"
  },
  "dependencies": {
    "ts-morph": "^20.0.0",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "@angular-devkit/architect": ">=19.0.0",
    "@angular-devkit/core": ">=19.0.0",
    "@angular/compiler": ">=19.0.0",
    "@angular/core": ">=19.0.0",
    "@angular/elements": ">=19.0.0",
    "@angular/platform-browser": ">=19.0.0"
  },
  "devDependencies": {
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/elements": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular-devkit/architect": "^0.2101.2",
    "@angular-devkit/core": "^21.1.2",
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^10.0.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "semantic-release": "^23.0.7",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
